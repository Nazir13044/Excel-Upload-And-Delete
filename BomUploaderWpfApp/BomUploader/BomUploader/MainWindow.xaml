        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox Name="FilePathBox" HorizontalAlignment="Left" Height="23" Margin="66,156,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="283"/>
        <Button Name="Browse" Content="Browse" HorizontalAlignment="Left" Margin="367,156,0,0" VerticalAlignment="Top" Width="75" Click="Browse_Click" Height="23"/>
        <Button Name="Upload" Content="Upload" HorizontalAlignment="Left" Margin="66,205,0,0" VerticalAlignment="Top" Width="75" Click="Upload_Click"/>
        <ProgressBar Name="progressBar1" HorizontalAlignment="Left" Height="16" Margin="66,251,0,0" VerticalAlignment="Top" Width="376"/>
        <ComboBox Name="ProjectComboBox" IsTextSearchEnabled="True" StaysOpenOnEdit="True" IsEditable="True" HorizontalAlignment="Left" Margin="163,98,0,0" VerticalAlignment="Top" Width="131" Height="25" SelectionChanged="ProjectComboBox_SelectionChanged"/>
        <Label Content="Select Project" HorizontalAlignment="Left" Margin="66,98,0,0" VerticalAlignment="Top" Height="25"/>
        <TextBlock FontWeight="Heavy" FontSize="19" HorizontalAlignment="Left" Margin="146,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="203"><Run Language="en-in" Text="PCBA BOM Uploader"/></TextBlock>

    </Grid>
</Window>
